<config>
    <!-- The tweeter-config.xml file should be located at the path:  /var/opt/tweeter/tweeter-config.xml-->

    <downloads-dir>C:\tweetpony\fetchedImages</downloads-dir>
    <num-words>3</num-words>

    <services>
        <!-- Wordnik API key can be obtained from http://developer.wordnik.com -->
        <wordnik>
            <api-key><!--Wordnik Key Here--></api-key>
        </wordnik>

        <!-- Twitter OAUTH tokens obtainable by setting up Twitter App developer account at https://apps.twitter.com/-->
        <twitter>
            <access-token><!-- token key here --></access-token>
            <token-secret><!--token secret here --></token-secret>
            <consumer-secret><!-- consumer secret here --></consumer-secret>
            <consumer-key><!--  consumer key here--></consumer-key>
        </twitter>

        <google-custom-search>
            <key></key>
            <cx></cx>
        </google-custom-search>
    </services>
</config>
